        	<center>
        		<h1>Create an Event</h1>
        	</center>
			  <form class="mt-5">
			<div class="form-group">
			    <label for="inputAddress">Address</label>
			    <input type="text" class="form-control" name="address" id="inputAddress" placeholder="1234 Main St">
			</div>

			  <div class="form-row">
			    <div class="form-group col-md-6">
			      <label for="eventName">Event Name</label>
			      <input type="email" class="form-control" name="eventName" id="eventName" placeholder="Event Name">
			    </div>
			    <div class="form-group col-md-3">
			      <label for="date">Date</label>
			      <input type="date" class="form-control" name="date" id="date" placeholder="mm/dd/yyyy">
			    </div>
			    <div class="form-group col-md-3">
			      <label for="time">Time</label>
			      <input type="time" class="form-control" name="time" id="time" placeholder="Password">
			    </div>
			  </div> <!-- end second row-->
			  <div class="form-row">
			    <div class="form-group col-md-4">
			      <label for="inputCity">City</label>
			      <input type="text" class="form-control" name="inputCity" id="inputCity" placeholder="City">
			    </div>
			    <div class="form-group col-md-4">
			      <label for="inputState">State</label>
			      
			      <select id="inputState" class="form-control">
			        <% states.forEach(function(state){ %>
			                <option><%= state %></option>
			        <% }) %>
			      </select>
			      
			    </div>
			    <div class="form-group col-md-2">
			      <label for="inputZip">Zip</label>
			      <input type="text" class="form-control" id="inputZip" placeholder="Zip">
			    </div>
			    <div class="form-group col-md-2">
			      <label for="capacity">Capacity</label>
			      <input type="text" class="form-control" id="capacity" placeholder="capacity">
			    </div>
			  </div> <!-- ends third row -->
			  <div class="form-row mr-auto">
			  	<div class="form-group col-md-10">
			  		<label for="title">Title</label>
			  		<input type="text" id="title" class="form-control" placeholder="Title">
			  	</div>
			  	<div class="form-group col-md-2">
			  		
			  			<div class="form-check">
			  			  <label class="form-check-label" for="movieRadio">
						    Movie
						  </label>
						  <input class="form-check-input" type="radio" name="movieRadio" id="movieRadio" value="movie" checked>
						</div>
						
						<div class="form-check">
						  <label class="form-check-label" for="tvshowRadio">
						    Tv Show
						  </label>
						  <input class="form-check-input" type="radio" name="tvshowRadio" id="tvshowRadio" value="tvshow" checked>
						  
						</div>
						
						<div class="form-check">
						  <label class="form-check-label" for="liveEventRadio">
						    Live Event
						  </label>
						  <input class="form-check-input" type="radio" name="liveEventRadio" id="liveEventRadio" value="liveEvent" checked>
						</div>		
			  	
			  		
			  	</div> <!-- end radio -->
			  </div>

			  <button type="submit" class="btn btn-primary">Sign in</button>
			</form>
        </div>  
        
